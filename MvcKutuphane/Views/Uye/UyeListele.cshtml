@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "PersonelListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Listele</h2>

@using (Html.BeginForm("UyeListele", "Uye", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px">
        <b>Kitap ara:</b> @Html.TextBox("search")
        <input type="submit" value="Ara" />

    </div>
}

<table class="table table-bordered">
    <tr>
        <th>Üye ID</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Kitap Geçmişi</th>



    </tr>
    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.UYEID</td>
            <td>@uye.AD</td>
            <td>@uye.SOYAD</td>
            <td>@uye.TELEFON</td>
            <td>@uye.OKUL</td>
            <th><a href="/Uye/UyeSil/@uye.UYEID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Uye/UyeGetir/@uye.UYEID" class="btn btn-success">Güncelle</a></th>
            <th><a href="/Uye/UyeKitapGecmis/@uye.UYEID" class="btn btn-success" style="background-color:lightseagreen">Kitap Geçmişi</a></th>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Uyelistele", new { sayfa }))
<a href="/Uye/UyeEkle/" class="btn btn-primary">Yeni Personel Ekle</a>

