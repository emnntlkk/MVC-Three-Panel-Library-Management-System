@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "IslemListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>


<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Ad</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        
    </tr>
    @foreach (var hareket in Model)
    {
        <tr>
            <td>@hareket.HAREKETID</td>
            <td>@hareket.TBLKITAP.KITAPAD</td>
            <td>@hareket.TBLUYELER.AD @hareket.TBLUYELER.SOYAD</td>
            <td>@hareket.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(hareket.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(hareket.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
            
        </tr>
    }
</table>

