@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>

@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px">
        <b>Kitap ara:</b> @Html.TextBox("search")
        <input type="submit" value="Ara" />

    </div>
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>
    @foreach (var ktgr in Model)
    {
        <tr>
            
            <td>@ktgr.KATEGORIID</td>
            <td>@ktgr.AD</td>
            <th><a href="/Kategori/KategoriSil/@ktgr.KATEGORIID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">Güncelle</a></th>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>

