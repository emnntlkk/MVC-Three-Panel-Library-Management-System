@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "OduncAl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ödünç Kitap Al</h2>


<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Ad</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var hareket in Model)
    {
        <tr>
            <td>@hareket.HAREKETID</td>
            <td>@hareket.TBLKITAP.KITAPAD</td>
            <td>@hareket.TBLUYELER.AD @hareket.TBLUYELER.SOYAD</td>
            <td>@hareket.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(hareket.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(hareket.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td>@Html.ActionLink("Kitabı İade Et", "OduncIade", new { id = hareket.HAREKETID }, new { @class = "btn btn-success" })</td>
        </tr>
    }
</table>

