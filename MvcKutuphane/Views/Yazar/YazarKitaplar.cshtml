@using MvcKutuphane.Models.Entity;
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.yazar</h2>
<br />

<table class="table table-striped">

    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kategori</th>
        <th>Yayınevi</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.KITAPID</td>
                    <td>@x.KITAPAD</td>
                    <td>@x.TBLKATEGORI.AD</td>
                    <td>@x.YAYINEVİ</td>
                </tr>
            }
</table>
