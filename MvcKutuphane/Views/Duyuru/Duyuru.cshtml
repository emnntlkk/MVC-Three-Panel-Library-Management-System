@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyuru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>Duyuru No</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
       


    </tr>
    @foreach (var duyuru in Model)
    {
        <tr>
            <td>@duyuru.DUYURUID</td>
            <td>@duyuru.KATEGORI</td>
            <td>@Convert.ToDateTime(duyuru.TARIH).ToString("dd/MM/yyyy")</td>
            
            <th><a href="/Duyuru/DuyuruSil/@duyuru.DUYURUID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Duyuru/DuyuruDetay/@duyuru.DUYURUID" class="btn btn-success" style="background-color:skyblue">Detaylar</a></th>
        </tr>
    }
</table>

<a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>